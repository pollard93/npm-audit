{
  "name": "@ppoll/npm-audit",
  "version": "1.1.0",
  "description": "Run npm audit and fail on high/critical vulnerabilities unless explicitly accepted",
  "bin": {
    "npm-audit": "lib/cli/cli.js"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npm run clean && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepublishOnly": "npm run lint && npm run format:check && npm run build && npm test"
  },
  "keywords": [
    "npm",
    "audit",
    "security",
    "vulnerabilities",
    "ci",
    "pipeline"
  ],
  "author": "ppoll",
  "license": "MIT",
  "homepage": "https://github.com/pollard93/npm-audit",
  "repository": {
    "type": "git",
    "url": "https://github.com/pollard93/npm-audit.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^29.7.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0"
  },
  "files": [
    "lib/**/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
